extends base.pug

block content 
    if errorMessage 
        span=errorMessage
    form(method="post", enctype="multipart/form-data")
        label.file-input-label(for="video") Video file
            input.file-input(type="file", accept="video/*", required, id="video", name="video")
        input(name="title", placeholder="Title", required, type="text" ,maxlength=80)
        input(name="description", placeholder="Description", required, type="text", maxlength=150)
        input(name="hashtags", placeholder="Hashtags, separated by comma.", required, type="text")
        input(type="submit", value="Upload")